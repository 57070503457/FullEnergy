<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yingpoljitravitavaj.fullenergy.FullEnergySleep">

    <TextView
        android:id="@+id/txtDST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:text="Daily sleep time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtWST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly sleep time"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="112dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/txtMST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly sleep time"
        android:layout_marginTop="190dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/txtLTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lifetime summary"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="259dp"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/txtWakeGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wake up goal"
        android:layout_marginLeft="39dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="83dp"
        android:layout_marginStart="39dp" />

    <TextView
        android:id="@+id/txtDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="83dp"
        android:text="Duration"
        app:layout_constraintLeft_toRightOf="@+id/txtWakeGoal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBedGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bedtime Goal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="83dp"
        android:layout_marginStart="41dp"
        app:layout_constraintLeft_toRightOf="@+id/txtDuration"
        android:layout_marginLeft="40dp" />

    <EditText
        android:id="@+id/txtboxTimeWake"
        android:layout_width="82dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="time"
        android:layout_marginLeft="41dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp" />

    <EditText
        android:id="@+id/txtboxTimeBed"
        android:layout_width="82dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="256dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/txtboxTimeDuration"
        android:layout_width="82dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.486" />

    <EditText
        android:id="@+id/txtboxWST"
        android:layout_width="82dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtboxMSTt"
        android:layout_width="82dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="214dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtboxLTS"
        android:layout_width="82dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="284dp"
        android:ems="10"
        android:inputType="time"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnWake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="366dp"
        android:text="I'm wake!!!"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
